@model E_shop.Viewmodels.HomeViewModel
@{
    ViewBag.Title = "Home Page";

}
@section carousel{@Html.Partial("HeaderImage")}
<div class="row">
    <div class="col-mid-12">
        <h2 class="text-center"> Categories</h2>
        <hr />
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-3 d-none d-sm-block col-sm-5">
                    <a href="/home/product/@category.CategoryId">
                        <img src="~/Image/@Url.Content(category.Thumbnail)" class="product-thumb" />
                    </a>
                    <div class="productTitle">
                        <a href="/home/product/@category.CategoryId" >
                            <h4 class="text-center">@category.Name</h4>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-mid-12">
        <h2 class="text-center"> Suggested items.</h2>
        <hr />
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-3 d-none d-sm-block col-sm-5">
                    <a href="/product/@product.Id">
                        <img src="~/Image/@Url.Content(product.Thumbnail)" class="product-thumb" />
                    </a>
                    <div class="productTitle">
                        <a href="/product/@product.Id">
                            <h4 class="text-center">@product.Name</h4>
                        </a>
                        <h4>
                            <span class="pull-left">
                                Price :
                            </span>
                            <span class="pull-right">
                                @product.Price
                            </span>
                        </h4>
                        <button class="addtocart btn btn-block  js-cart" id="@product.Id">
                            <i class="fa  fa-cart-plus"></i>
                            Add to Cart!
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

