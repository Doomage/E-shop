@model E_shop.Models.Product
@{
    ViewBag.Title = "SingleProduct";
}

<div class="row">
    <div class="col-md-6">
        <img src="~/Image/@Url.Content(Model.Thumbnail)" />
    </div>
    <div class="col-md-6">
        <h3>@Html.DisplayFor(model=>model.Name)</h3>
        <h4>Categorie : @ViewBag.Category.Name</h4>
        <p>@Html.Raw(Model.Description)</p>
        <h3>Price : @Html.DisplayFor(model=>model.Price)</h3>
        <button class="btn btn-default" id="@Html.DisplayFor(model=>model.Id)">Add to cart!</button>
    </div>
</div>

